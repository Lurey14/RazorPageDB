@model Practica_MVC.Models.ProductoModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h2><i class="fas fa-trash-alt me-2"></i>Delete Product</h2>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <h4><i class="fas fa-exclamation-triangle me-2"></i>Are you sure you want to delete this product?</h4>
                <p class="text-muted">This action cannot be undone.</p>
            </div>

            <div class="row mb-4">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header bg-light">
                            <h5>Product Details</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-3 text-end">
                                    @Html.DisplayNameFor(model => model.Nombre)
                                </dt>
                                <dd class="col-sm-9 fw-bold">
                                    @Html.DisplayFor(model => model.Nombre)
                                </dd>

                                <dt class="col-sm-3 text-end">
                                    @Html.DisplayNameFor(model => model.Descripcion)
                                </dt>
                                <dd class="col-sm-9">
                                    @Html.DisplayFor(model => model.Descripcion)
                                </dd>

                                <dt class="col-sm-3 text-end">
                                    @Html.DisplayNameFor(model => model.Precio)
                                </dt>
                                <dd class="col-sm-9 text-success fw-bold">
                                    $@Html.DisplayFor(model => model.Precio)
                                </dd>

                                <dt class="col-sm-3 text-end">
                                    @Html.DisplayNameFor(model => model.Stock)
                                </dt>
                                <dd class="col-sm-9">
                                    <span class="badge bg-info">@Html.DisplayFor(model => model.Stock) units</span>
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <form asp-action="Delete" class="text-center">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-center gap-2">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-1"></i> Confirm Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
}